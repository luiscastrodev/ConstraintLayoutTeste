<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"/>


    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:text="Cappuccino"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageClock"
        android:src="@drawable/ic_clock"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/imageFavorite"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/purple_200"
        android:layout_width="45dp"
        android:layout_height="45dp"/>


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageFavorite"
        android:src="@drawable/ic_alert"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageClock"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:tint="@color/purple_200"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/textPreparacao"
        app:layout_constraintTop_toBottomOf="@+id/imageClock"
        app:layout_constraintRight_toRightOf="@id/imageClock"
        app:layout_constraintLeft_toLeftOf="@id/imageClock"
        android:text="15 Minutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/imageFavorite"
        app:layout_constraintRight_toRightOf="@id/imageFavorite"
        app:layout_constraintLeft_toLeftOf="@id/imageFavorite"
        android:text="45 Minutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <View
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textPreparacao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view_separeted"
        android:background="@color/purple_200"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
         android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separeted"
        android:id="@+id/textDescription"
        android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#878383"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textTitle"
        android:text="Ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>